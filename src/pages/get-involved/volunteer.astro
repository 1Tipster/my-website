---
export const prerender = true;
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Volunteer | Idyllwild Indivisible" description="Volunteer with Idyllwild Indivisible and make a difference.">
  <div class="max-w-3xl mx-auto">
    <h1 class="text-4xl font-bold mb-4">Volunteer</h1>
    <p class="text-xl text-[var(--color-text-secondary)] mb-8">
      Join us in taking action for democracy, justice, and peace.
    </p>
    <div class="p-6 rounded-xl border border-[var(--color-border)] bg-[var(--color-bg-secondary)]">
      <p class="text-[var(--color-text-secondary)]">
        Volunteer opportunities are coming soon. In the meantime, please
        <a href="/contact" class="text-[var(--color-accent)] hover:underline">contact us</a>
        to express your interest and we'll be in touch.
      </p>
    </div>
  </div>
</BaseLayout>
