---
export const prerender = true;
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Donate | Idyllwild Indivisible" description="Support Idyllwild Indivisible with a donation.">
  <div class="max-w-3xl mx-auto">
    <h1 class="text-4xl font-bold mb-4">Donate</h1>
    <p class="text-xl text-[var(--color-text-secondary)] mb-8">
      Your support makes our work possible.
    </p>
    <div class="p-6 rounded-xl border border-[var(--color-border)] bg-[var(--color-bg-secondary)]">
      <p class="text-[var(--color-text-secondary)]">
        Donation information is coming soon. Please
        <a href="/contact" class="text-[var(--color-accent)] hover:underline">contact us</a>
        if you'd like to contribute to our chapter's work.
      </p>
    </div>
  </div>
</BaseLayout>
