---
export const prerender = true;
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Education | Idyllwild Indivisible" description="Our Education committee promotes civic literacy and awareness.">
  <div class="max-w-3xl mx-auto">
    <nav class="text-sm text-[var(--color-text-secondary)] mb-6">
      <a href="/committees/education" class="hover:text-[var(--color-accent)]">Committees</a>
      <span class="mx-2">/</span>
      <span>Education</span>
    </nav>
    <h1 class="text-4xl font-bold mb-4">Education Committee</h1>
    <p class="text-xl text-[var(--color-text-secondary)] mb-8">
      Promoting civic literacy, awareness, and informed action in our community.
    </p>
    <div class="p-6 rounded-xl border border-[var(--color-border)] bg-[var(--color-bg-secondary)]">
      <p class="text-[var(--color-text-secondary)]">
        This page is coming soon. Check back for information about our Education committee's
        programs, workshops, and resources.
      </p>
    </div>
  </div>
</BaseLayout>
